<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <div class="title">Bookers</div>
              <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
                  <% if user_signed_in? %>
                    <li><%= link_to "Home", user_path(current_user.id) %></li>
                    <li><%= link_to 'Users', users_path %></li>
                    <li><%= link_to 'Posts', posts_path %></li>
                    <li><%= link_to "logout", destroy_user_session_path, method: :delete %></li>
                  <% else %>
                    <li><%= link_to "Home", "/" %></li>
                    <li><%= link_to "About", "/home/about" %></li>
                    <li><%= link_to "sign up", new_user_registration_path %></li>
                    <li><%= link_to "login", new_user_session_path %></li>
                  <% end %>
                </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <div>
      <%= yield %>
    </div>
    </body>
</html>
